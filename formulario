         <input onkeypress='return SomenteNumero(event)'
                type="text"
                name="date"
                id=date
                placeholder="dd/mm/yyyy"
                onkeyup="
                var v = this.value;
             if (v.match(/^\d{2}$/) !== null) {
               this.value = v + '/';
           } else if (v.match(/^\d{2}\/\d{2}$/) !== null) {
               this.value = v + '/';
           }"
           maxlength="10"
>
     </div>
